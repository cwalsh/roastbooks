= form_for(@library) do |f|
  - if @library.errors.any?
    #error_explanation
      %h2
        = pluralize(@library.errors.count, "error")
        prohibited this library from being saved:
      %ul
        - @library.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :location
    %br/
    = f.text_area :location
  .actions
    = f.submit
