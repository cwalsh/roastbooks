%h1 Listing libraries
%table
  %tr
    %th Name
    %th{:colspan => 3} Actions
  - @libraries.each do |library|
    %tr.library0
      %td= library.name
      %td= link_to 'Show', library
      %td= link_to 'Edit', edit_library_path(library)
      %td= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' }
    %tr.library1
      %td{:colspan => 2}= library.description
      %td{:colspan => 2}= library.location
%br/
= link_to 'New Library', new_library_path
