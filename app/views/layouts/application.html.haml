!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Roast Books
    = stylesheet_link_tag    "application", :media => "all"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

      @media (max-width: 980px) {
        /* Enable use of floated navbar text */
        .navbar-text.pull-right {
          float: none;
          padding-left: 5px;
          padding-right: 5px;
        }
      }
    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="../assets/js/html5shiv.js"></script>
    / Fav and touch icons
    %link{:href => "../assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => "../assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    %link{:href => "../assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    %link{:href => "../assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/
    %link{:href => "../assets/ico/favicon.png", :rel => "shortcut icon"}/
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #login
      - if notice
        %p.notice= notice
      - if alert
        %p.alert= alert
      .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
          .container-fluid
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            =link_to "Roast Books", home_path, :class => 'brand'
            .nav-collapse.collapse
              %p.navbar-text.pull-right
                = render :partial => 'layouts/login'
              %ul.nav
                %li{:class => 'active'}
                  =link_to "Home", home_path
            / /.nav-collapse
      .container-fluid
        .row-fluid
          .span3
            .well.sidebar-nav
              %ul.nav.nav-list
                %li.nav-header Me
                %li{:class => controller_name == 'home' ? 'active' : nil}
                  =link_to "Home", home_path
                %li{:class => (controller_name == 'libraries' && action_name == 'index') ? 'active' : nil}
                  =link_to "My Libraries", libraries_path
                %li.nav-header Everybody
                %li{:class => (controller_name == 'libraries' && action_name == 'all') ? 'active' : nil}
                  =link_to "All Libraries", all_libraries_path
            / /.well
          / /span
          .span9
            - if content_for? :hero
              .hero-unit
                = yield :hero
            = yield
        %hr/
        %footer
          %p
            &copy; Cameron Walsh
            = Date.today.year
    = javascript_include_tag "bootstrap"
